{
  "name": "PaywallHub",
  "version": "1.0.0",
  "description": "All your favorite paywall removers, united.",
  "scripts": {
    "build": "npx tailwindcss -i ./src/input.css -o ./src/output.css && npx postcss ./src/output.css -o ./src/output.min.css",
    "watch": "npx tailwindcss -i ./src/input.css -o ./src/output.css --watch"
  },
  "author": "Ángel Sánchez Guerrero",
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "^10.4.17",
    "cssnano": "^6.0.3",
    "postcss-cli": "^11.0.0",
    "tailwindcss": "^3.4.1"
  }
}
